---
import { uiStrings } from '@i18n/uiStrings'
import { getTagPath } from '@utilities/tags'
interface Props {
  tags: string[]
}
const { tags } = Astro.props
const locale = Astro.currentLocale

const { tagHeadingSingular, tagHeadingPlural} = uiStrings
const uiString =
  tags.length === 1
    ? tagHeadingSingular[locale]
    : tagHeadingPlural[locale]
---

<p>
  {uiString}:
  {
    tags.map((tag, index) => (
      <>
        <a href={`${getTagPath(locale, tag)}`}>{tag}</a>
        <span>{index < tags.length - 1 ? ', ' : ''}</span>
      </>
    ))
  }.
</p>
