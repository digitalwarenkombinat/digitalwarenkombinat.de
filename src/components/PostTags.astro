---
import { uiStrings } from "@i18n/uiStrings"
import { getTagPath } from "@utilities/tags"
interface Props {
  tags: string[]
}
const { tags } = Astro.props
const uiString =
  tags.length === 1
    ? uiStrings.tagHeadingSingular[Astro.currentLocale]
    : uiStrings.tagHeadingPlural[Astro.currentLocale]
---

<p>
  {uiString}:
  {tags.map((tag, index) => (
    <a href={`${getTagPath(Astro.currentLocale, tag)}`}>{tag}</a>
    <span>{index < tags.length - 1 ? ', ' : ''}</span>
  ))}.
</p>