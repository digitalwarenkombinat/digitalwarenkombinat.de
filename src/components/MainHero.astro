---
const { mainHero } = Astro.props;
---

<main class="mt-8 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:px-8 lg:mt-20 xl:mt-28">
  <div class="sm:text-center lg:text-left">
    <h1 class="text-4xl tracking-tight font-extrabold text-black sm:text-5xl md:text-5xl">
      <span class="block xl:inline">{mainHero.title}</span>{' '}
      <span class={'block text-primary xl:inline'}>{mainHero.subtitle}</span>
    </h1>
    <p class="mt-4 text-base text-black sm:mt-8 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-4 md:text-xl lg:mx-0">
      {mainHero.description}
    </p>
    <div class="mt-4 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
      <div class="rounded-md shadow">
        <a
          href={mainHero.primaryAction.href}
          class={
            'w-full flex items-center justify-center px-8 py-4 border border-transparent text-base font-medium rounded-md text-gray-100 bg-primary hover:bg-tertiary md:py-4 md:text-lg md:px-8'
          }
        >
          {mainHero.primaryAction.text}
        </a>
      </div>
      <div class="mt-4 sm:mt-0 sm:ml-4">
        <a
          href={mainHero.secondaryAction.href}
          class={
            'w-full flex items-center justify-center px-8 py-4 border text-base font-medium rounded-md border-primary text-secondary bg-background hover:bg-tertiary hover:text-gray-100 md:py-4 md:text-lg md:px-8'
          }
        >
          {mainHero.secondaryAction.text}
        </a>
      </div>
    </div>
  </div>
</main>
