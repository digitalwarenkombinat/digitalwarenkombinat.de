---
import { getTagPath } from '@utilities/tags'

interface Props {
  tags: string[]
}

const { tags } = Astro.props
const locale = Astro.currentLocale
---

<div class='inline-block mx-auto'>
  {
    tags.map((tag) => {
      const tagPath = getTagPath(locale, tag)
      return (
        <a
          class='text-tertiary dark:text-white tracking-wider border-2 rounded-md p-1 m-2 inline-block border-primary'
          href={tagPath}
        >
          <strong>{`#${tag}`}</strong>
        </a>
      )
    })
  }
</div>
