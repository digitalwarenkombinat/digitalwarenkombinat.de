---
import Button from '@components/Button.astro'
import { siteMail } from '@src/consts'
import { uiStrings } from '@i18n/uiStrings'

const locale = Astro.currentLocale
const { title, subtitle, description, primaryAction } = uiStrings
const heroTitle = title[locale]
const heroSubtitle = subtitle[locale]
const heroDescription = description[locale]
const heroPrimaryAction = primaryAction[locale]
---

<article class='text-center'>
  <h1>{heroTitle} <span class='text-primary'>{heroSubtitle}</span></h1>
  <p>{heroDescription}</p>
  <Button href={siteMail}>
    {heroPrimaryAction}
  </Button>
</article>
