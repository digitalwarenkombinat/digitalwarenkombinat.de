---
import { uiStrings } from '@i18n/uiStrings'
import { area, getFocusPath } from '@src/utilities/area'
import Caption from './Caption.astro'

const locale = Astro.currentLocale

const { areaTitle, areaSubtitle } = uiStrings
const title = areaTitle[locale]
const subtitle = areaSubtitle[locale]
---

<section>
  <Caption title={title} subtitle={subtitle} />
  <ul>
    {
      area.map((focus) => (
        <li>
          <div class='bg-secondary rounded-full absolute mt-1 -ml-2 h-10 w-10' />
          <h3 class='z-10'>
            <a href={getFocusPath(locale, focus.id)}>{focus.name}</a>
          </h3>
          <p class='p-4 md:w-2/3'>{focus.description[locale]}</p>
        </li>
      ))
    }
  </ul>
</section>
