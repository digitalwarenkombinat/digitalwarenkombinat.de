---
import { getPersonPath, type Person } from '@utilities/people'
import CustomImage from '@components/CustomImage.astro'
interface Props {
  person: Person
}
const { person } = Astro.props
const locale = Astro.currentLocale
---

<div>
  <div class="flex items-center gap-8 mb-4">
    <a href={getPersonPath(locale, person.id)}>
      <CustomImage
        imagePath={person.image}
        altText={person.name}
        class="rounded-full"
      />
    </a>
    <div>
      <p class="text-xl text-primary">{person.name}</p>
      <p class="text-secondary">{person.description[locale]}</p>
    </div>
  </div>
  <div>
    <p>{person.content[locale]}</p>
  </div>
</div>
