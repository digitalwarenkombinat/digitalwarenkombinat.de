---
import type { CollectionEntry } from 'astro:content'
import MainI18n from '@components/MainI18n.astro'

type Props = CollectionEntry<'projects'>['data']

const frontmatter = Astro.props
const { title, previewImage } = Astro.props
---

<MainI18n {frontmatter} collection="projects">
  <main id="main" tabindex="”1”">
    <article>
      <h1>{title}</h1>
      {
        previewImage && (
          <img width={1020} height={510} src={previewImage} alt="" />
        )
      }
      <div class="prose">
        <slot />
      </div>
    </article>
  </main>
</MainI18n>
