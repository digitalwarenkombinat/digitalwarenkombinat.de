---
import { getShopItemPath } from '@src/utilities/shop'
import Caption from '@components/Caption.astro'
import CustomImage from '@components/CustomImage.astro'
import Divider from '@components/Divider.astro'
import { uiStrings } from '@i18n/uiStrings'

const { item } = Astro.props
const locale = Astro.currentLocale

const blogShop = uiStrings.blogShop[locale]
const blogShopRelated = uiStrings.blogShopRelated[locale]
---

<Divider />
<Caption title={blogShop} subtitle={blogShopRelated} />
<div class='flex gap-4'>
  <a href={getShopItemPath(locale, item.id)}>
    <CustomImage
      class='border-tertiary dark:border-primary border-8 rounded-md max-w-40'
      imagePath={item.image}
      altText={item.name}
    />
  </a>
  <div>
    <h3>{item.name}</h3>
    <p>{item.project[locale]}</p>
    <p>{item.description[locale]}</p>
    <p>{item.price[locale]}</p>
  </div>
</div>
