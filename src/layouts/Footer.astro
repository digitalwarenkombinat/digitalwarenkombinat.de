---
const { config } = Astro.props;
const { company, contact } = config;
const { logo, name: companyName } = company;
const { socialMedia, sections } = contact;
---

<footer id="contact" class="mx-auto container xl:px-20 lg:px-12 sm:px-8 px-4">
  <div class="flex flex-col items-center justify-center">
    <div>
      <img src={logo} alt={companyName} class="w-24 h-24" />
    </div>
    <div class="flex flex-wrap sm:gap-8 gap-4 items-center justify-center mt-4 h-12">
      {sections.map((section) => (
        <a
          key={section.name}
          href={section.href}
          class="hover:text-primary text-base cursor-pointer leading-4 text-black"
        >
          {section.name}
        </a>
      ))}
    </div>
