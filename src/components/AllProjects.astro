---
import Button from '@components/Button.astro'
import { getLocalizedHref } from '@i18n/utilities'
import { uiStrings } from '@i18n/uiStrings'
const locale = Astro.currentLocale
const { projectAllTitle, projectAllSubtitle, projectLink } = uiStrings
const allTitle = projectAllTitle[locale]
const allSubtitle = projectAllSubtitle[locale]
const link = projectLink[locale]
---

<li>
  <h3>{allTitle}</h3>
  <blockquote>{allSubtitle}</blockquote>
  <Button href={getLocalizedHref(locale, '/projects')}>{link}</Button>
</li>
