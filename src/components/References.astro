---
import { uiStrings } from '@i18n/uiStrings'
import { referencesData } from '@src/references'
import Caption from './Caption.astro'

const locale = Astro.currentLocale
const { referencesTitle, referencesSubtitle } = uiStrings
const title = referencesTitle[locale]
const subtitle = referencesSubtitle[locale]
---

<section>
  <Caption title={title} subtitle={subtitle} />
  <div class='flex flex-wrap gap-8'>
    {
      referencesData.map((item) => (
        <div class='flex flex-col md:flex-row text-lg text-center border-secondary border-2 rounded-lg md:even:flex-row-reverse'>
          <p class='p-4 hyphens-auto md:basis-3/4'>
            {item.description[locale]}
          </p>
          <p class='flex flex-col p-4 justify-center md:basis-1/4 bg-secondary rounded-md'>
            <span class='block'>{`${item.author[locale]},`}</span>
            <span class='block'>{item.role[locale]}</span>
          </p>
        </div>
      ))
    }
  </div>
</section>
