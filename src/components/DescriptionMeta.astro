---
import { siteKeywords, siteTitle } from '@src/consts'
interface Props {
  description: string
}

const { description } = Astro.props
---

{
  description && (
    <>
      <meta name='description' content={description} />
      <meta name='copyright' content={siteTitle} />
      <meta name='keywords' content={siteKeywords} />
    </>
  )
}
